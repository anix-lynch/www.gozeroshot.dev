<style>
  .container {
    display: flex;
    gap: 2rem;
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .main-content {
    display: flex;
    gap: 2rem;
    width: 100%;
  }

  .content {
    flex: 1;
  }

  h1 {
    font-size: 2.5rem;
    margin: 0 0 2rem 0;
    color: #333;
  }

  h2 {
    font-size: 1.5rem;
    margin: 1.5rem 0 1rem 0;
    color: #555;
    border-bottom: 2px solid #007bff;
    padding-bottom: 0.5rem;
  }

  .press-section {
    margin-bottom: 2rem;
  }

  .press-list {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-bottom: 1.5rem;
  }

  .press-list li {
    padding: 0.75rem 0 0.75rem 1.5rem;
    border-left: 3px solid #007bff;
    margin-bottom: 0.5rem;
    line-height: 1.6;
    color: #555;
    position: relative;
  }

  .press-list li:before {
    content: "â–¸";
    position: absolute;
    left: -1rem;
    color: #007bff;
    font-weight: bold;
  }

  .press-list a {
    color: #007bff;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease;
  }

  .press-list a:hover {
    border-bottom-color: #007bff;
  }

  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
    overflow: hidden;
    max-width: 100%;
    background: #000;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .back-button {
    margin: 2rem 0;
  }

  .back-button a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: background 0.3s ease;
  }

  .back-button a:hover {
    background: #0056b3;
  }

  .instagram-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 0.5rem;
    margin-top: 1.5rem;
  }

  .grid-item {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
    background: #f0f0f0;
    border-radius: 4px;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .grid-item:hover {
    transform: scale(1.05);
    z-index: 10;
  }

  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      gap: 1rem;
    }

    .main-content {
      flex-direction: column;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.25rem;
    }

    .instagram-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 0.25rem;
    }
  }
</style>

