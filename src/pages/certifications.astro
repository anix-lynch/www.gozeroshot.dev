<style>
  .certifications-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 2rem 0;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #666;
    margin: 0;
  }

  .cert-section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 1.8rem;
    margin-bottom: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #667eea;
    display: inline-block;
  }

  .cert-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .cert-card {
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }

  .cert-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .cert-card:hover {
    border-color: #667eea;
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.15);
    transform: translateY(-4px);
  }

  .cert-card:hover::before {
    transform: scaleX(1);
  }

  .cert-card.featured {
    border-color: #667eea;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
    background: linear-gradient(135deg, #f5f7ff 0%, #ffffff 100%);
  }

  .cert-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .cert-card h3 {
    font-size: 1.1rem;
    margin: 0.5rem 0;
    font-weight: 600;
  }

  .cert-card p {
    margin: 0.25rem 0;
    color: #666;
    font-size: 0.95rem;
    flex-grow: 1;
  }

  .cert-card .year {
    color: #999;
    font-size: 0.85rem;
    margin-top: 0.5rem;
  }

  .view-badge {
    display: inline-block;
    margin-top: 1rem;
    color: #667eea;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .cert-card:hover .view-badge {
    color: #764ba2;
    transform: translateX(4px);
  }

  .footer-note {
    text-align: center;
    margin-top: 4rem;
    padding: 2rem;
    background: #f9f9f9;
    border-radius: 12px;
    color: #666;
  }

  .footer-note a {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .footer-note a:hover {
    color: #764ba2;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 1.8rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .section-title {
      font-size: 1.4rem;
    }

    .cert-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>

