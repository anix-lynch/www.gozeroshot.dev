  }

  .header-button {
    display: inline-block;
    padding: 0.6rem 1.2rem;
    background: #8cb0d4;
    color: white;
    text-decoration: none;
    border-radius: 0.375rem;
    font-size: 0.9rem;
    font-weight: 400;
    transition: background 0.3s ease;
  }

  .header-button:hover {
    background: #6a8fb8;
  }

  @media (max-width: 768px) {
    .header-section {
      flex-direction: column;
      align-items: flex-start;
    }

    .header-buttons {
      width: 100%;
      flex-direction: column;
    }

    .header-button {
      width: 100%;
      text-align: center;
    }
  }
</style>
