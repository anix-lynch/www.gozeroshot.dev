<style>
  .certifications-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 2rem 0;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #666;
    margin: 0;
  }

  .cert-section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 1.8rem;
    margin-bottom: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #667eea;
    display: inline-block;
  }

  .cert-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .cert-item {
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .cert-item:hover {
    border-color: #667eea;
    box-shadow: 0 12px 32px rgba(102, 126, 234, 0.2);
    transform: translateY(-8px);
  }

  .cert-thumbnail {
    width: 100%;
    height: 200px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .cert-icon-large {
    font-size: 4rem;
    z-index: 1;
  }

  .cert-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(255, 255, 255, 0.9);
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    color: #667eea;
  }

  .cert-info {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .cert-item h3 {
    font-size: 1.1rem;
    margin: 0;
    font-weight: 600;
    color: #1f2937;
  }

  .cert-item .org {
    font-size: 0.9rem;
    color: #666;
    margin: 0.5rem 0 0 0;
  }

  .cert-item .year {
    font-size: 0.85rem;
    color: #999;
    margin-bottom: 0.5rem;
  }

  .view-link {
    display: inline-block;
    margin-top: auto;
    color: #667eea;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .cert-item:hover .view-link {
    color: #764ba2;
    transform: translateX(4px);
  }

  .cert-item:hover .cert-thumbnail {
    transform: scale(1.05);
  }

  .footer-note {
    text-align: center;
    margin-top: 4rem;
    padding: 2rem;
    background: #f9f9f9;
    border-radius: 12px;
    color: #666;
  }

  .footer-note a {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .footer-note a:hover {
    color: #764ba2;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 1.8rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .section-title {
      font-size: 1.4rem;
    }

    .cert-gallery {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .cert-preview {
      height: 220px;
    }
  }
</style>

