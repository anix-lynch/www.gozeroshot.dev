<style>
  .container {
    display: flex;
    gap: 2rem;
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .main-content {
    display: flex;
    gap: 2rem;
    width: 100%;
  }

  .content {
    flex: 1;
  }

  h1 {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    color: #333;
  }

  .instagram-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 0.5rem;
    margin-top: 1.5rem;
  }

  .grid-item {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
    background: #f0f0f0;
    border-radius: 4px;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .grid-item:hover {
    transform: scale(1.05);
    z-index: 10;
  }

  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .back-button {
    margin: 2rem 0;
  }

  .back-button a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #8cb0d4;
    color: white;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: background 0.3s ease;
  }

  .back-button a:hover {
    background: #6a8fb8;
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      gap: 1rem;
    }

    .main-content {
      flex-direction: column;
    }

    h1 {
      font-size: 2rem;
    }

    .instagram-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 0.25rem;
    }
  }
</style>
