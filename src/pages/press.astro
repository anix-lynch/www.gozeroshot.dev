---
import Layout from '../components/Layout.astro';
import Sidebar from '../components/Sidebar.astro';

interface SidebarProps {
  name?: string;
  tagline?: string;
  avatar?: string;
  about?: string;
  skills?: string[];
  social?: {
    linkedin?: string;
    github?: string;
    email?: string;
    twitter?: string;
    website?: string;
    huggingface?: string;
    medium?: string;
  };
}

const {
  name = "Anix Lynch",
  tagline = "AI Data Engineer, AI Architect\nLos Angeles, CA",
  avatar = "/profile-photo.jpg",
  about = "Data engineer with multi-cloud experience. Specialized in machine learning, data visualization, and deploying scalable ML solutions across AWS, GCP, and Azure.",
  skills = ["Python", "GenAI & LLMs", "AI Agents", "RAG Systems", "Data Engineering", "Snowflake Cortex", "Vertex AI", "Multi-Cloud (AWS/GCP/Azure)", "Vector Databases", "ML Pipelines", "ETL Pipelines", "SQL"],
  social = {
    linkedin: "https://www.linkedin.com/in/anixlynch/",
    github: "https://github.com/anix-lynch",
    email: "anixlynch@gmail.com",
    twitter: "https://x.com/anixlynch",
    website: "https://anixlynch.com",
    huggingface: "https://huggingface.co/spaces/anixlynch/anixlynch",
    medium: "https://medium.com/@anixlynch"
  }
} = Astro.props;
---

<Layout title="Press â€” Anix Lynch">
  <div class="container">
    <div class="main-content">
      <Sidebar {name} {tagline} {avatar} {about} {skills} {social} />
      
      <div class="content">
        <div class="back-button">
          <a href="/">&larr; Back to Portfolio</a>
        </div>

        <h1>ðŸ“º Television & Press</h1>
        
        <section class="press-section">
          <h2>Television Appearances</h2>
          <ul class="press-list">
            <li><strong>Main Judge at Reality Show, LINE TV "Startup Star 4.0"</strong> - First season, featuring top Singers and stars in Thailand. <em>(Geo-restricted to Thailand)</em></li>
            <li><strong>True Television on Thai Startup 2018</strong> - First season</li>
          </ul>
        </section>

        <section class="press-section">
          <h2>Media Features</h2>
          <ul class="press-list">
            <li>Featured in European news article in Sweden about FinTech in Asia</li>
            <li>Newspaper Article, "Expara GSB Startup Fund" Prachachat Business, Post Today, 2017</li>
            <li>Tansettakij, Peak Engine Press Conference</li>
            <li>Tech in Asia, E27, Event Banana Press Conference</li>
          </ul>

          <div class="newspaper-grid">
            <img src="/press-gallery/newspaper.jpg" alt="Newspaper article" />
            <img src="/press-gallery/press post today.jpg" alt="Post Today newspaper" />
            <img src="/press-gallery/EB press.jpg" alt="EB Press article" />
          </div>
        </section>

