<style>
  .container {
    display: flex;
    gap: 2rem;
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .main-content {
    display: flex;
    gap: 2rem;
    width: 100%;
  }

  .content {
    flex: 1;
  }

  h1 {
    font-size: 2.5rem;
    margin: 0 0 2rem 0;
    color: #333;
  }

  h2 {
    font-size: 1.5rem;
    margin: 1.5rem 0 1rem 0;
    color: #2d5070;
    border-bottom: 2px solid #8cb0d4;
    padding-bottom: 0.5rem;
  }

  .press-section {
    margin-bottom: 2rem;
  }

  .press-list {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-bottom: 1.5rem;
  }

  .press-list li {
    padding: 0.75rem 0 0.75rem 1.5rem;
    border-left: 3px solid #8cb0d4;
    margin-bottom: 0.75rem;
    line-height: 1.7;
    color: #333;
    position: relative;
  }

  .press-list li:before {
    content: "â–¸";
    position: absolute;
    left: 0.25rem;
    color: #8cb0d4;
    font-weight: bold;
  }

  .press-list a {
    color: #8cb0d4;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease;
    font-weight: 500;
  }

  .press-list a:hover {
    border-bottom-color: #8cb0d4;
    color: #6a8fb8;
  }

  .press-list em {
    color: #666;
    font-size: 0.9rem;
  }

  .back-button {
    margin: 2rem 0;
  }

  .back-button a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #8cb0d4;
    color: white;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: background 0.3s ease;
  }

  .back-button a:hover {
    background: #6a8fb8;
  }

  .video-link {
    display: block;
    text-decoration: none;
  }

  .video-thumbnail {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0,0,0,0.12);
    transition: all 0.3s ease;
  }

  .video-thumbnail:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
  }

  .video-thumbnail img {
    width: 100%;
    display: block;
  }

  .play-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
  }

  .video-thumbnail:hover .play-overlay {
    background: rgba(0, 0, 0, 0.5);
  }

  .play-icon {
    font-size: 4rem;
    color: white;
    text-shadow: 0 2px 8px rgba(0,0,0,0.3);
  }

  .newspaper-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .newspaper-grid img {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0,0,0,0.12);
    transition: all 0.3s ease;
  }

  .newspaper-grid img:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      gap: 1rem;
    }

    .main-content {
      flex-direction: column;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.25rem;
    }
  }
</style>

